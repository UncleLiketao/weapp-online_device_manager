<!--pages/home/home.wxml-->
<!--搜索框start-->
<view class='page_row' bindtap="suo">
  <view class="search">
    <view class="df search_arr">
      <icon class="searchcion" size='16' type='search'></icon>
      <input class="sousuo" disabled placeholder="搜索" bindtap='goSearch' />
    </view>
  </view>
</view>
<!--搜索框end-->
<!--功能快捷方式start-->
<view class='function-shortcut'>
  <view class='item' bindtap='goLogin'>
    <image class="icon" src="../../images/account_login.png" background-size="cover"></image>
    <view class='text'>帐号登录</view>
  </view>
  <view class='item' bindtap='deviceCodeScan'>
    <image class="icon" src="/images/code_scan.png" background-size="cover"></image>
    <view class='text'>扫码借机</view>
  </view>
  <view class='item'>
    <image class="icon" src="/images/device_upload.png" background-size="cover"></image>
    <view class='text'>设备上传</view>
  </view>
</view>
<!--功能快捷方式end-->
<view class='content-container'>
  <!--设备类别选择start-->
  <scroll-view class="category-container">
    <view class="category active">
      <view class="name active">全部设备</view>
    </view>
