<!--pages/home/home.wxml-->
<view class="device_list">
  <view class="item" wx:for="{{deviceData}}" >
    <view class="pic">
      <image src="{{item.deviceImage}}"></image>
    </view>
    <view class="content">
      <view class="title">{{item.deviceName}}
      </view>
      <view class="attr">
        <view class="sncode">设备SN码：{{item.snCode}}</view>
        <view class="borrower">当前持有人：{{item.borrower}}</view>
        <view class="btn-area"  >
          <button wx:if="{{canIUse}}" class="detail-button" type="default" size="mini" open-type="getUserInfo" data-deviceId="{{item._id}}"
            bindtap="deviceCodeScan">扫码借出</button>
        </view>
      </view>
    </view>
  </view>
</view>