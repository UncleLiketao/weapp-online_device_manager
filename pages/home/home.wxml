<!--pages/home/home.wxml-->
 <!--搜索框start-->
<view class='page_row' bindtap="suo">
    <view class="search">
        <view class="df search_arr">
            <icon class="searchcion" size='16' type='search'></icon>
            <input class="sousuo" disabled placeholder="搜索" bindtap='search' />
        </view>
    </view>
</view>
 <!--搜索框end-->
 <!--功能宫格start-->
<view class="page">
    <view class="page__bd">
        <view class="weui-grids">
            <block>
                <navigator url="/pages/login/login" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="/images/帐号登录.png" />
                    <view class="weui-grid__label">帐号登录</view>
                </navigator>
            </block>
            <block>
                <navigator url="/pages/device/device" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="/images/全部设备.png" />
                    <view class="weui-grid__label">全部设备</view>
                </navigator>
            </block>
            <block>
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="/images/设备上传.png" />
                    <view class="weui-grid__label">设备上传</view>
                </navigator>
            </block>
        </view>
    </view>
</view>
<!--功能宫格end-->
 <!--扫码借机按钮start-->
<view class="btn">
    <button type="primary" size="default">扫码借机</button>
</view>
<view>
  <view wx:for="{{list}}" wx:key='item' class='lists'>
    <text wx:if="{{item.show}}">{{item.name}}</text>
  </view>
</view>
 <!--扫码借机按钮end-->
<view class="device_list">
  <view class="item" wx:for="{{deviceData}}" wx:key="item">
    <view class="pic">
      <image src="{{item.deviceImage}}"></image>
    </view>
    <view class="content">
      <view class="title">{{item.deviceName}}
      </view>
      <view class="attr">
        <view class="sncode">设备识别码：{{item.deviceNo}}</view>
        <view class="borrower">当前持有人：{{item.borrowerDepartment}}_{{item.borrowerName}}</view>
      </view>
      <!--设备展示区域end-->
    </view>
  </view>
</view>