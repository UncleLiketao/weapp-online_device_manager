/* 搜索框wxss*/
page {
  width: 100vw;
  height: 100vh;
}

.search {
  width: 98%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.sousuo {
  padding-left: 38%;
  width: 15%;
  line-height: 150%;
  text-align: center;
}

.page_row {
  display: flex;
  flex-direction: row
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  margin-left: 38%;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}

/*功能快捷方式wxss*/
.function-shortcut {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.function-shortcut .item {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  text-align: center;
}

.function-shortcut .item .icon {
  width: 80rpx;
  height: 75rpx;
  margin-left: 80rpx;
}

.function-shortcut .item .text {
  margin-top: 8rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}

/* 分类栏wxss*/
.content-container {
  width: 100vw;
  height: 100%;
  margin-top: 32rpx;
  display: flex;
}

.deviceType-container .deviceType.active {
  border-left: 4rpx solid #d81e06;
}

.deviceType-container .deviceType .name.active {
  color: #d81e06;
  font-weight: bold;
}

.deviceType-container {
  width: 180rpx;
  height: 100%;
}

.deviceType-container .deviceType {
  padding: 30rpx 0rpx;
  text-align: center;
}

.deviceType-container .deviceType .name {
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

/* 设备栏wxss*/
.devices-container {
  flex: 1;
  min-height: 100%;
  background-color: #F2f2f2
}

.devices {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
  background-color: #fff;
  overflow: hidden;
  border-radius: 5px;
  margin-left: 5rpx;
  margin-top: 5rpx;
  margin-right: 5rpx;
}

.devices .pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
}

.ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.devices .sncode {
  display: flex;
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.devices .borrower {
  display: flex;
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}