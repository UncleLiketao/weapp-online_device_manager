.device_list .item {
  display: flex;
  padding: 30rpx 20rpx;
}

.device_list .item .pic {
  width: 200rpx;
  height: 200rpx;
}

.device_list .item .pic image {
  width: 200rpx;
  height: 200rpx;
}

.device_list .item .content {
  margin-left: 20rpx;
}

.device_list .item .content .title {
  font-size: 32rpx;
}
.device_list .item .content .title  {
  font-size: 32rpx;
  margin-left: 30rpx;
  color: black;
}
.device_list .item .content .attr .sncode {
  font-style: "微软雅黑";
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  color: #999;
}

.device_list .item .content .attr .borrower {
  font-style: "微软雅黑";
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  color: #999;
}

.btn-area .detail-button {
  font-size: 32rpx;
  width: 80%;
  margin-top: 20rpx;
  margin-right: 100rpx;
  background-color: beige;
  color: black;
}


.search{
  display: flex;
  position: relative;
 }
.search .scan-button{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.scan-button .scan-button-image{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 40rpx;
  width: 40rpx;
}
 .search input{
  border:1px solid #ccc;
  border-radius: 6px;
  height: 33px;
  margin-right: 20rpx;
  width: 100%;
 }
 .icons{
  position: absolute;
  right: 20px;
  top:5px;
 }
 .lists{
  text-align: center;
  margin-top: 20px;
  color: rgb(230, 124, 25);
 }