/* pages/profile/profile.wxss */
/* 设备栏wxss*/
page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
  width: 750rpx;
  margin-bottom: 20rpx;
}
.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.userinfo-name {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}

/* flex重新构建菜单 */
.menu-item {
  width: 100vw;
  height: 104rpx;
  padding: 0 32rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-item .l {
  font-size:34rpx;
  color:#333;
  line-height:104rpx;
}
.menu-item .r {
  font-size:32rpx;
  color:#999;
  line-height:104rpx;
}
.menu-item .next {
  width: 40rpx;
  height: 40rpx;
}
.menu-item button {
  margin: 0;
}

.line {
  width:718px;
  height:1px;
  background:#EEEEEE;
  margin-left: 32rpx;
}

.space {
  width: 100vw;
  height: 16rpx;
  background: #F4F5F9;
}